[Unit]
Description=Gunicorn instance to serve mysite production
After=network.target

[Service]
User=deploy
Group=www-data
WorkingDirectory=/var/www/mysite-prod/mysite
Environment="PATH=/var/www/mysite-prod/.venv/bin"
Environment="DJANGO_SETTINGS_MODULE=config.settings.prod"
ExecStart=/var/www/mysite-prod/.venv/bin/gunicorn \
          --config /var/www/mysite-prod/mysite/gunicorn_config.py \
          config.wsgi:application

Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target

